#zoom
  h1 {{ info.user.displayName }} ({{ info.user.name }})
  a(v-on:click="openSummary") Show ramp chart for this period

  h2 {{ info.user.repoName }}
  v_ramp(
      v-bind:user="info.user",
      v-bind:tframe="'commit'",
      v-bind:sdate="info.sinceDate",
      v-bind:udate="info.untilDate",
      v-bind:avgsize="info.avgCommitSize")

  .zoom__toggle-commit-message-body
      button(v-on:click="toggleAllCommitMessagesBody()") show/hide all commit messages body

  .zoom__day(v-for="day in info.user.commits")
    template(v-if="day.insertions > 0")
      h3 {{ day.date }}
      ul
        li(v-for="slice in day.commitResults")
          a(v-bind:href="getSliceLink(slice)", target="_blank") {{ slice.messageTitle }}
          span &nbsp; ({{ slice.insertions }} lines)
          .commit-message.active(v-if="showAllCommitMessageBody === true")
            button(onclick="toggleNext(this)", v-if="slice.messageBody.length > 0") show/hide commit message body
            pre(v-if="slice.messageBody.length > 0").body {{ slice.messageBody }}
            p(v-else) No commit message body

